<!-- Este serÃ¡ um arquivo PNG, mas vou criar um SVG primeiro e depois converter -->
<svg width="192" height="192" viewBox="0 0 192 192" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="bgGradient" cx="50%" cy="30%" r="80%">
      <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
      <stop offset="40%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="80%" style="stop-color:#4338ca;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e1b4b;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="zGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#e0e7ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c7d2fe;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="192" height="192" rx="48" fill="url(#bgGradient)"/>
  
  <!-- Subtle pattern overlay -->
  <rect width="192" height="192" rx="48" fill="url(#pattern)" opacity="0.1"/>
  
  <!-- Main Z Letter -->
  <g transform="translate(96, 96)">
    <!-- Z Shadow/Glow -->
    <path d="M-45 -50 L45 -50 L45 -25 L-15 25 L45 25 L45 50 L-45 50 L-45 25 L15 -25 L-45 -25 Z" 
          fill="#6366f1" opacity="0.3" filter="url(#glow)" transform="translate(2, 2)"/>
    
    <!-- Main Z -->
    <path d="M-45 -50 L45 -50 L45 -25 L-15 25 L45 25 L45 50 L-45 50 L-45 25 L15 -25 L-45 -25 Z" 
          fill="url(#zGradient)" stroke="#ffffff" stroke-width="2"/>
    
    <!-- Inner highlight -->
    <path d="M-35 -40 L35 -40 L35 -30 L-10 20 L35 20 L35 40 L-35 40 L-35 30 L10 -20 L-35 -20 Z" 
          fill="none" stroke="#ffffff" stroke-width="1" opacity="0.6"/>
  </g>
  
  <!-- Sparkle effects -->
  <circle cx="40" cy="40" r="2" fill="#ffffff" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="152" cy="60" r="1.5" fill="#e0e7ff" opacity="0.6">
    <animate attributeName="opacity" values="0.6;0.2;0.6" dur="3s" repeatCount="indefinite"/>
  </circle>
  <circle cx="160" cy="140" r="2.5" fill="#c7d2fe" opacity="0.7">
    <animate attributeName="opacity" values="0.7;0.3;0.7" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="30" cy="160" r="1" fill="#ffffff" opacity="0.5">
    <animate attributeName="opacity" values="0.5;0.1;0.5" dur="4s" repeatCount="indefinite"/>
  </circle>
</svg>
